{
  "version": 2,
  "builds": [
    { "src": "frontend/vite.config.ts", "use": "@vercel/static-build", "config": { "distDir": "frontend/dist" } },
    { "src": "backend/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/index.js" },
    { "src": "/(.*)", "dest": "/frontend/dist/$1" }
  ]
}
